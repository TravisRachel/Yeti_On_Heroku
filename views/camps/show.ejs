<% include ../partials/header %> 
<div class=container>
   
    <div class="col-md-12">

         <div class="card mb-3">
              <img class="card-img-top" src="<%= camps.image %>"alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= camps.name %></h5>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                 <p> <i>By:</i><%= camps.author.username %></p>
                 <div class="d-flex justify-content-start">
                   <div>
                        <a class="btn btn-warning" href="/camps/<%= camps._id %>/edit"> Edit</a>
                   </div> 
                        <form action="/camps/<%= camps._id %>?_method=DELETE" method="POST">
                       <button class="btn btn-danger"> Delete</button>
                  </form>
                 </div>
                     
            </div>
  </div>
</div>
        </div>

            <table class="table table-striped">
         <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col"></th>
                <th scope="col"><h3>Yeti Comments<i class="fas fa-comments"></i></h3></th>
                <th scope="col"> <td><a class="btn btn-success" href="/camps/<%= camps._id %>/comments/new">Add Comment? </a></td></th>
             
            </tr>
            <% camps.comments.forEach(function(comment){ %>
            </thead>
            <tbody>
            <tr>
                <th scope="row">#</th>
                <td>Comment By: <em> <%= comment.author.username %></em> </td>
                <td><%= comment.text %> </td>
                <td><a class="btn btn-sm btn-warning" href="/camps/<%=camps._id%>/comments/<%=comment._id%>/edit"> Edit</a></td>
                <td><form action="/camps/<%=camps._id%>/comments/<%=comment._id%>_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-sm btn-danger" value="Delete">
            </form></td>
          </tr>

          <% }); %>  

         
        </tbody>
      </table>

        </div>
    </div>
</div>





<% include ../partials/footer %> 







